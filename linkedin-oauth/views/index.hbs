<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

{{#if user}}
      <p>
        Hello {{user.displayName}}
        |
        <a href="/logout">Logout</a>
      </p>
    {{else}}
      <p>
        <a href="/auth/linkedin">Login to Linkedin</a>
        <a href="/auth/twitter">Login Twitter</a>
      </p>
    {{/if}}

    {{#if profile}}
   <img src="{{profile.pictureUrl}}">
 {{/if}}
